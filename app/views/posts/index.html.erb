<% content_for :title, "Posts" %>
<h1>Posts</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th class="text-end">Published</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %></td>
        <td><%= post.author %></td>
        <td class="text-end"><%= post.published.to_formatted_s(:long) %></td>
      </tr>
    <% end %>
  </tbody>
</table>