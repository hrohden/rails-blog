<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th class="text-end">Published</th>
      <th class="text-end">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %></td>
        <td><%= link_to post.author.name, post.author %></td>
        <td class="text-end"><%= post.published.to_formatted_s(:long) %></td>
        <td class="text-end">
          <div class="btn-group" role="group" aria-label="Basic example">
            <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-light btn-sm' %>
            <%= button_to 'Delete', post, method: :delete, class: 'btn btn-light btn-sm' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>