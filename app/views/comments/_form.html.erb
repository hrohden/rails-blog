<%= form_with(model: comment) do |form| %>
  <div class="mb-3">
    <%= form.label :body, class: 'form-label' %>
    <%= form.text_area :body, class: comment.errors[:body].any? ? 'form-control is-invalid' : 'form-control', rows: 3 %>
    <% if comment.errors[:body].any? %>
      <div class="text-danger small"><%= comment.errors[:body].join(', ') %></div>
    <% end %>
  </div>
  <%= form.submit 'Save', class: 'btn btn-primary' %>
<% end %>